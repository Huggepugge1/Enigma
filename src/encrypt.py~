def rot(string: bytes, n: int = -1) -> bytes:
    upper = lambda x: 65 <= x <= 90
    lower = lambda x: 97 <= x <= 122
    for char in string:
        if upper(char):
            char = (((char - 65) + n) % 25) + 65
        elif lower(char):
            char = (((char - 97) + n) % 25) + 97

    return string


print(rot(b"Hello World", 1))
